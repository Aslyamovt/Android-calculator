<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ScrollView
        android:background="#e0e0e0"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <TextView
            android:id="@+id/resultField"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="30sp"/>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textSize="25sp"
            android:text="^"
            android:onClick="onButtonClick"/>
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textSize="25sp"
            android:text="XOR"
            android:onClick="onButtonClick"/>
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="23sp"
            android:text="SQRT"
            android:onClick="onButtonClick"/>
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textSize="25sp"
            android:text="Del"
            android:onClick="delOne"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textSize="25sp"
            android:text="("
            android:onClick="onButtonClick"/>
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textSize="25sp"
            android:text=")"
            android:onClick="onButtonClick"/>
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textSize="25sp"
            android:text="MOD"
            android:onClick="onButtonClick"/>
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textSize="25sp"
            android:text="*"
            android:onClick="onButtonClick"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textSize="25sp"
            android:text="7"
            android:onClick="onButtonClick"/>
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textSize="25sp"
            android:text="8"
            android:onClick="onButtonClick"/>
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textSize="25sp"
            android:text="9"
            android:onClick="onButtonClick"/>
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textSize="25sp"
            android:text="/"
            android:onClick="onButtonClick"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textSize="25sp"
            android:text="4"
            android:onClick="onButtonClick"/>
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textSize="25sp"
            android:text="5"
            android:onClick="onButtonClick"/>
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textSize="25sp"
            android:text="6"
            android:onClick="onButtonClick"/>
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textSize="25sp"
            android:text="+"
            android:onClick="onButtonClick"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textSize="25sp"
            android:text="1"
            android:onClick="onButtonClick"/>
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textSize="25sp"
            android:text="2"
            android:onClick="onButtonClick"/>
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textSize="25sp"
            android:text="3"
            android:onClick="onButtonClick"/>
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textSize="25sp"
            android:text="-"
            android:onClick="onButtonClick"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textSize="25sp"
            android:text="."
            android:onClick="onButtonClick"/>
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textSize="25sp"
            android:text="0"
            android:onClick="onButtonClick"/>
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textSize="25sp"
            android:text="00"
            android:onClick="onButtonClick"/>
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textSize="25sp"
            android:text="="
            android:onClick="resultOfCalculations"/>
    </LinearLayout>
</LinearLayout>